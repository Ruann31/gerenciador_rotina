<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Fundo branco (ou transparente, se quiser) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- ou @android:color/transparent -->
        </shape>
    </item>

    <!-- Linha na parte inferior -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <size android:height="2dp"/> <!-- Espessura da borda -->
            <solid android:color="#FF0000"/> <!-- Cor da borda -->
        </shape>
    </item>
</layer-list>
